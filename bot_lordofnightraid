def player_choice(player, score, opponent_score):
    # TODO: return True if the player wants to roll again
    #       return False if the player wants to hold
    if player == 0:
        choice = input("Do you want to roll again(y/n)?: ")
        while choice != "y" and choice != "n":
            choice = input("Do you want to roll again(y/n)?: ")
        if choice == "y":
            return True
        else:
            return False
    elif player == 1:
        time.sleep(random.randint(1, 3)/10)
        return ((score < 16) and (score <= 100) and (score*4/(opponent_score + 1) < 0.90))
